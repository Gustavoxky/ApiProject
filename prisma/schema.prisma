generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  login    String @unique
  password String @unique

  @@map("users")
}

model Post {
  id          String   @id @default(uuid())
  description String
  createdAt   DateTime @default(now())
  files      File[]

  @@map("post")
}

model File {
  id     String @id @default(uuid())
  path   String
  post   Post   @relation(fields: [postId], references: [id])
  postId String

  @@map("file")
}